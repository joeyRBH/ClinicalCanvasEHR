{
  "cleanUrls": true,
  "trailingSlash": false,
  "buildCommand": "echo 'No build step required'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/app",
      "destination": "/app.html"
    },
    {
      "source": "/login",
      "destination": "/app.html"
    },
    {
      "source": "/test-sms",
      "destination": "/test-sms.html"
    },
    {
      "source": "/test-stripe",
      "destination": "/test-stripe.html"
    },
    {
      "source": "/test-backblaze",
      "destination": "/test-backblaze.html"
    }
  ]
}